# Configuration for Strands Agent
# This is a sample configuration file. Copy this to .env and update with your actual values.

# MCP Server Configuration
# Multiple MCP Servers (comma-separated list)
# Use this for multi-camera setups

# Local servers (for development)
# MCP_SERVER_URLS=http://127.0.0.1:9006/sse/,http://127.0.0.1:9007/sse/

# ngrok forwarded servers (for remote access and production)
MCP_SERVER_URLS=https://your-ngrok-url-1.app/sse,https://your-ngrok-url-2.app/sse

# Individual camera MCP server URLs (for AgentCore)
MCP_SERVER_URL_CAMERA1=https://your-ngrok-url-1.app/sse
MCP_SERVER_URL_CAMERA2=https://your-ngrok-url-2.app/sse

# Camera Configuration
# Camera 1 (Main Camera)
CAMERA1_IP=192.168.x.x
CAMERA1_PORT=2020
CAMERA1_USER=your_camera_username
CAMERA1_PASSWORD=your_camera_password
CAMERA1_MCP_PORT=9006
CAMERA1_STREAM_NAME=camera_1_stream

# Camera 2 (Secondary Camera)
CAMERA2_IP=192.168.x.x
CAMERA2_PORT=2020
CAMERA2_USER=your_camera_username
CAMERA2_PASSWORD=camera2_password
CAMERA2_MCP_PORT=9007
CAMERA2_STREAM_NAME=camera_2_stream

# Legacy single camera configuration (deprecated)
CAMERA_IP=192.168.x.x
CAMERA_PORT=2020
CAMERA_USER=your_camera_username
CAMERA_PASSWORD=your_camera_password
RTSP_USER=your_rtsp_username
RTSP_PASSWORD=your_rtsp_password

# AWS Configuration
AWS_REGION=ap-northeast-1

# Bedrock Model Configuration
# Available models:
# - jp.anthropic.claude-haiku-4-5-20251001-v1:0 (Haiku - lightweight)
# - apac.amazon.nova-lite-v1:0 (Nova Lite)
# - apac.amazon.nova-pro-v1:0 (Nova Pro - recommended)
BEDROCK_MODEL_ID=apac.amazon.nova-pro-v1:0

# AWS Transcribe Configuration
AWS_TRANSCRIBE_S3_BUCKET=your-s3-bucket-name

# AgentCore Runtime Configuration
# For local mode: use AGENTCORE_RUNTIME_URL
# AGENTCORE_RUNTIME_URL=http://127.0.0.1:8020

# For AWS mode: use AGENTCORE_RUNTIME_ARN and BEDROCK_AGENT_RUNTIME_ARN
AGENTCORE_RUNTIME_ARN=arn:aws:bedrock-agentcore:region:account-id:runtime/your-runtime-name
BEDROCK_AGENT_RUNTIME_ARN=arn:aws:bedrock-agentcore:region:account-id:runtime/your-runtime-name

# Lambda Execution Role (for Alexa Skill integration)
LAMBDA_EXECUTION_ROLE_ARN=arn:aws:iam::account-id:role/your-lambda-execution-role

# go2rtc Configuration (for video streaming)
GO2RTC_API_URL=http://localhost:1984/api/ffmpeg
GO2RTC_CAMERA_STREAM_NAME=tapo_cam
